/*Header views blokken*/
.blok-header {padding-top:32px;background-color:var(--lichte-achtergrond); }
.blok-header h2{font-weight:800;text-align:center;padding-bottom: 32px;}
.blok-header h2::after{content:'';border-bottom:4px solid var(--basis-kleur);display: block;
                       width:3%;margin: 0px auto;height:15px;}

/*style views veiling grid*/
.veiling-back-view{background-color:var(--lichte-achtergrond);padding-top:32px;}/*css class voor achtergrond veiling pagina, vind je in views en/of in het blok*/
.veiling-back-view h2{padding:15px 0px 15px;font-weight:800;}
 .veiling-back-view h2::after{border-bottom:3px solid var(--basis-kleur);content:'';width:3%;margin:auto;padding-top:10px;
           display:block;}
.ganshetzootje{max-width:250px;margin-bottom:16px;background-color:var(--bleketekst);}
.views-foto{max-width:100%;margin:auto;}
.auto-view-titel{margin:7px 0px 7px;padding:0px 5px 0px 5px;}
.auto-view-titel a:link{text-decoration:none;font-weight:bold;}
.auto-view-titel a:hover{box-shadow: 7px 7px 13px gainsboro;}
.auto-view-titel a:active{box-shadow: 7px 7px 13px silver;}	
.jaarkilo{font-size:11px;padding:3px;}
.gebouwdejaar{color:#7a7a52}
.kilometertjes{color:#7a7a52}
.grijzewaas1{display:inline-block;width:107px;padding:5px;background-color:var(--lichte-achtergrond);font-size:12px;}
.grijzewaas2{display:inline-block;width:113px;padding:5px;background-color:var(--lichte-achtergrond);font-size:12px;}
.klokicoon{margin:0px 5px 3px;}
.bodicoon{margin:0px 5px 3px;}
.biedmee{color:mintcream;}
.biedmee a:link{text-decoration:none;display:inline-block;font-size:17px;background-color:var(--basis-kleur);width:94%;
                text-align:center;padding:7px 0px 7px;margin-left:3%;margin-bottom:3%;}
.biedmee a:hover{box-shadow:inset 0px 0px 2px 2px lightsteelblue;}
.biedmee a:active{box-shadow:inset 0px 0px 1px 1px lightsteelblue;}
