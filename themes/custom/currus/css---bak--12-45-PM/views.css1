/*++++++++++++++++++++++VIEWS BEPERKTE FILTER++++++++++++++++*/
.beperkt-zoekvenster{background-color:var(--basis-kleur);padding:24px 12px;margin-top:0;}
.beperkt-zoekvenster form{display:flex;flex-wrap: wrap;/*flex-flow:row wrap;*/}
.beperkt-zoekvenster select{padding:7px 13px;border:1px solid var(--bleketekst);width:170px;
                           color:var(--bleketekst);background-color:var(--basis-kleur);margin-top:
                           24px;margin-right:13px;-webkit-appearance:none;-moz-appearance:none;
                           appearance:none; }
.beperkt-zoekvenster input[type = 'submit']{letter-spacing:2px;font-size: 18px;margin-top:24px; 
                                            color:var(basis-kleur);background-color:var(--lichte-achtergrond);
                                            padding:4px 18px;width:170px;border:none;font-weight:700;}
.beperkt-zoekvenster input[type = 'submit']:hover{ box-shadow:0px 0px 1px 1px black inset;}
.beperkt-zoekvenster input[type = 'submit']:active{font-size:17px;}
.beperkt-zoekvenster select:hover{background-color:var(--lichte-achtergrond);color:var(--basis-kleur); }
.beperkt-zoekvenster select option{font-size:13px;}
.beperkt-zoekvenster input[type = 'text']{width:135px;padding:7px 13px 7px 13px;border-radius:4px;border:0;
                                        font-size:12px; }

/*++++++++++++++++++SELECT DOWN ARROW++++++++++++++++++++++*/
.shs-widget-container{position:relative;}
.shs-widget-container[data-shs-level="0"]::after, .shs-widget-container[data-shs-level="1"]::after,
.shs-widget-container[data-shs-level="2"]::after{content:"";position:absolute;right:27px;bottom:15px;
                                                 pointer-events:none;border:2px solid var(--bleketekst);
                                                 border-width: 0 1px 1px 0;padding:5px;
                                                 transform:rotate(45deg);}
.form-item-field-prijs-value, .form-item-field-jaar-value, .form-item-field-km-value{position:relative}
.form-item-field-prijs-value::after, .form-item-field-jaar-value::after,
.form-item-field-km-value::after{content:"";position:absolute;left:78%;top:35px;pointer-events:none;
                               border:2px solid var(--bleketekst);border-width: 0 1px 1px 0;padding:5px;
                               transform:rotate(45deg);}
.shs-widget-container[data-shs-level="0"]:hover::after, .shs-widget-container[data-shs-level="1"]:hover::after,
.shs-widget-container[data-shs-level="2"]:hover::after, .form-item-field-prijs-value:hover::after,
.form-item-field-jaar-value:hover::after,
.form-item-field-km-value:hover::after{border:2px solid var(--basis-kleur);border-width: 0 1px 1px 0}



